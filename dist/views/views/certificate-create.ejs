<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create PDF Certificate</title>
    <script src="./scripts/createCertificate.js" defer></script>
  </head>
  <body style="padding: 0; margin: 0; font-family: Arial, sans-serif">
    <header style="background-color: #4a90e2; color: #fff; text-align: center">
      <%- include('./partials/header.ejs'); %>
      <h1 style="padding: 10px 0px; font-size: 2em">Create Certificate</h1>
    </header>

    <main style="padding: 10px">
      <div
        id="successCard"
        style="
          display: none;
          max-width: 500px;
          margin: 0 auto;
          padding: 20px;
          background-color: #e8f5e9;
          border: 1px solid #c8e6c9;
          border-radius: 8px;
          text-align: center;
        "
      >
        <h2 style="color: #4caf50">Certificate Created Successfully!</h2>
        <p>Your PDF certificate has been created.</p>
        <button
          id="downloadPdfButton"
          style="
            margin-top: 15px;
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
          "
        >
          Download PDF
        </button>
        <button
          id="recreatePdfButton"
          style="
            margin-top: 10px;
            width: 100%;
            padding: 10px;
            background-color: #4a90e2;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
          "
        >
          Recreate PDF
        </button>
      </div>

      <form
        id="certificateForm"
        style="
          max-width: 500px;
          margin: 30px auto;
          background-color: #ffffff;
          padding: 40px;
          border-radius: 8px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        "
      >
        <h2 style="text-align: center; color: #333">Certificate Details</h2>

        <label
          for="studentName"
          style="display: block; margin-bottom: 5px; color: #333"
          >Student Name</label
        >
        <input
          type="text"
          id="studentName"
          name="studentName"
          placeholder="Enter student name"
          required
          style="
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
          "
        />

        <!-- Course Name -->
        <label
          for="courseName"
          style="display: block; margin-bottom: 5px; color: #333"
          >Course Name</label
        >
        <input
          type="text"
          id="courseName"
          name="courseName"
          placeholder="Enter course name"
          required
          style="
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
          "
        />

        <!-- Technologies -->
        <label
          for="technologies"
          style="display: block; margin-bottom: 5px; color: #333"
          >Technologies</label
        >
        <input
          type="text"
          id="technologies"
          name="technologies"
          placeholder="Enter technologies, separated by commas"
          required
          style="
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
          "
        />

        <!-- Generate Certificate Button -->
        <button
          type="button"
          id="generateCertificateButton"
          style="
            width: 100%;
            padding: 10px;
            background-color: #4a90e2;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
          "
        >
          Generate Certificate
        </button>
      </form>
    </main>

    <footer
      style="
        background-color: #4a90e2;
        color: #fff;
        text-align: center;
        padding: 10px;
      "
    >
      <%- include('./partials/footer.ejs'); %>
    </footer>

    <script>
      document
        .getElementById("generateCertificateButton")
        .addEventListener("click", () => {
          console.log("Clicked");
        });
    </script>
  </body>
</html>
